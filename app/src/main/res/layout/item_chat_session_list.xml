<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_session_item_height"
        android:paddingLeft="15dp">

        <com.kanebay.lepu.askdr.common.ui.common.CircularImage
            android:id="@+id/imgView_user_head"
            android:layout_width="@dimen/chat_session_item_head_size"
            android:layout_height="@dimen/chat_session_item_head_size"
            android:background="@drawable/icon_header_default"
            android:layout_centerVertical="true"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp" />

        <TextView
            android:id="@+id/txt_chat_new_msg_number"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_width="@dimen/chat_session_item_tip"
            android:layout_height="@dimen/chat_session_item_tip"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:layout_alignRight="@+id/imgView_user_head"
            android:text="14"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/chat_icon_receive_msg_number" />

        <RelativeLayout
            android:id="@+id/layout_txt"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgView_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/ic_level"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_content"
                android:singleLine="true"
                android:maxWidth="230dp"
                android:layout_below="@+id/txt_user_name"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hhhhhhhh"
                android:textSize="13sp"
                android:textColor="@color/txt_doctor" />

            <TextView
                android:id="@+id/txt_time"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hhhhhhhh"
                android:textSize="12sp"
                android:textColor="@color/txt_hint" />
        </RelativeLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgView_user_head"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/txt_hint" />
    </RelativeLayout>
</RelativeLayout>