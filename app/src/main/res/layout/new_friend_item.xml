<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/new_gray"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/new_friend_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/friend_head_man" />

            <TextView
                android:id="@+id/new_friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/typeface"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="名称" />

            <TextView
                android:id="@+id/new_friend_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="时间"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/app_color" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bnp:    "
                    android:textSize="16sp"
                    android:textColor="@color/typeface"
                    />
                <TextView
		            android:id="@+id/new_friend_result"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="测试结果" 
		            android:textSize="18sp"
                    android:textColor="@color/typeface"
                    android:singleLine="true"
		            />
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/typeface"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView 
                android:id="@+id/new_friend_result_diag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/typeface"
                android:maxLines="4"
                android:text="测试结果数据分析"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>