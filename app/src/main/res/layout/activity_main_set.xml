<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yikang.heartmark.view.TopBarView
        android:id="@+id/setTopBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
            android:orientation="vertical">
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="20dp"
		        android:gravity="center_vertical" >
		
		        <ImageView
		            android:id="@+id/set_heat_icon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/head_icon" />
		
		        <TextView
		            android:id="@+id/set_regist"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="20dp"
		            android:text="注册"
		            android:textColor="#A3E99E"
		            android:textSize="22dp" />
		        <TextView
		            android:id="@+id/set_trial"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="15dp"
		            android:text="|"
		            android:textColor="@color/typeface"
		            android:textSize="20dp"
		             />
		
		        <TextView
		            android:id="@+id/set_login"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="15dp"
		            android:text="登录"
		            android:textColor="#A3E99E"
		            android:textSize="22dp" />
		    </LinearLayout>
		<!-- 输入框的排版 -->
		   <RelativeLayout
		        android:id="@+id/set_life_data"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:background="@drawable/edittext_img" >
		
		        <ImageView
		            android:id="@+id/imageView1"
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:background="@drawable/set_life" />
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/imageView1"
		            android:text="生活日志"
		            android:textSize="18dp" />
		
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="20dp"
		            android:background="@drawable/arrow_right_blue" />
		    </RelativeLayout>
		    
		    <RelativeLayout
		        android:id="@+id/set_celing_data"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/edittext_img" >
		
		        <ImageView
		            android:id="@+id/imageView2"
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:background="@drawable/set_user_celing" />
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/imageView2"
		            android:text="测量数据"
		            android:textSize="18dp" />
		
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="20dp"
		            android:background="@drawable/arrow_right_blue" />
		    </RelativeLayout>
		
		    <RelativeLayout
		        android:id="@+id/set_remind_data"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/edittext_img" >
		
		        <ImageView
		            android:id="@+id/imageView3"
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:background="@drawable/set_user_remind" />
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/imageView3"
		            android:text="智能提醒"
		            android:textSize="18dp" />
		
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="20dp"
		            android:background="@drawable/arrow_right_blue" />
		    </RelativeLayout>
		
		    <RelativeLayout
		        android:id="@+id/set_other"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/edittext_img" >
		
		        <ImageView
		            android:id="@+id/imageView4"
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:background="@drawable/set_other" />
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/imageView4"
		            android:text="其他"
		            android:textSize="18dp" />
		
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="20dp"
		            android:background="@drawable/arrow_right_blue" />
		    </RelativeLayout>
		    
		        
		    <RelativeLayout
		        android:id="@+id/set_scan"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/edittext_img" >
		
		        <ImageView
		            android:id="@+id/imageView5"
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:background="@drawable/celing_scan_img" />
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/imageView5"
		            android:text="医生编码"
		            android:textSize="18dp" />
		        <TextView
		            android:id="@+id/scan_Txt"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dp"
		            android:layout_toLeftOf="@+id/imageViewR5"
		            android:text=""
		            android:textSize="14dp" />
		
		        <ImageView
		            android:id="@+id/imageViewR5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="20dp"
		            android:background="@drawable/arrow_right_blue" />
		    </RelativeLayout>
		    
		    
		    <RelativeLayout
		       android:id="@+id/set_image"
		       android:layout_width="match_parent"
		       android:layout_height="40dp"
		       android:layout_marginLeft="15dp"
		       android:layout_marginRight="15dp"
		       android:layout_marginTop="20dp"
		       android:background="@drawable/edittext_img" >
		
		       <ImageView
		           android:id="@+id/imageView6"
		           android:layout_width="25dp"
		           android:layout_height="25dp"
		           android:layout_centerVertical="true"
		           android:layout_marginLeft="20dp"
		           android:background="@drawable/celing_case_img" />
		
		       <TextView
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_centerVertical="true"
		           android:layout_marginLeft="10dp"
		           android:layout_toRightOf="@+id/imageView6"
		           android:text="上传病历"
		           android:textSize="18dp" />
		
		       <ImageView
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_alignParentRight="true"
		           android:layout_centerVertical="true"
		           android:layout_marginRight="20dp"
		           android:background="@drawable/arrow_right_blue" />
		   </RelativeLayout>            
        </LinearLayout>
    </ScrollView>

</LinearLayout>