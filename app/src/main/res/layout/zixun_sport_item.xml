<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zixun_info_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/zixun_sport_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
             >
            <TextView 
                android:id="@+id/zixun_sport_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20dp" 
                android:text="title"
                />
            <TextView
                android:id="@+id/zixun_sport_item_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="18dp" 
                android:text="info..."
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >
                <ImageView 
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_icon"
                    
                    />
                <TextView 
                    android:id="@+id/zixun_sport_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="2014-12-22"
                    />
                
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>