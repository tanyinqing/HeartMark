<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yikang.heartmark.view.TopBarView
        android:id="@+id/setFriendAddTopBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/show_item_img"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/friend_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:hint="@string/set_friend_add_hint"
            android:singleLine="true"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/friend_add_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_img"
        android:gravity="center"
        android:text="@string/set_friend_add_button"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>