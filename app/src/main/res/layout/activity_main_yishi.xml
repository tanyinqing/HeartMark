<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.yikang.heartmark.view.TopBarView
        android:id="@+id/yishiTopBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/yishi_info_nodata_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yishi_no_data" 
            android:visibility="gone"
            />

        <ListView
            android:id="@+id/yishi_info_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/yishi_info_button"
            android:layout_marginBottom="20dp"
            android:divider="@null"
            android:scrollbars="vertical"
            android:visibility="visible" />

        <Button
            android:id="@+id/yishi_info_button"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_img"
            android:text="开始提问"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>

</LinearLayout>