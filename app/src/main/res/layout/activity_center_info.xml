<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.yikang.heartmark.view.TopBarView
        android:id="@+id/centerInfoBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/new_gray"
        >
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="1.5dp"
	        android:background="#dfdfdf" 
	        /> 
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:text="姓        名"
	            android:textSize="18sp"
	            android:textColor="@color/black"
	            android:gravity="center"
	            />
	        <EditText 
	            android:id="@+id/center_info_username"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="4"
	            android:maxLength="16"
	            android:hint="请输入名称"
	            android:background="@null"
	            android:textSize="16sp"
	            android:textColor="@color/typeface"
	            android:gravity="center"
	            />
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:src="@null"
	            android:layout_gravity="center_vertical"
	            />
	    </LinearLayout> 
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1.5dp"
	        android:background="#dfdfdf" 
	        />      
	        
	    <LinearLayout 
	        android:id="@+id/center_info_sexLL"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:text="性        别"
	            android:textSize="18sp"
	            android:textColor="@color/black"
	            android:gravity="center"
	            />
	        <TextView 
	            android:id="@+id/center_info_sex"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="4"
	            android:hint="请选择性别"
	            android:background="@null"
	            android:textSize="16sp"
	            android:textColor="@color/typeface"
	            android:gravity="center"
	            />
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:src="@drawable/center_info_img"
	            android:layout_gravity="center_vertical"
	            />
	    </LinearLayout> 
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1.5dp"
	        android:background="#dfdfdf" 
	        /> 
	        
	    <LinearLayout 
	        android:id="@+id/center_info_ageLL"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:text="年        龄"
	            android:textSize="18sp"
	            android:textColor="@color/black"
	            android:gravity="center"
	            />
	        <TextView 
	            android:id="@+id/center_info_age"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="4"
	            android:hint="请选择年龄"
	            android:background="@null"
	            android:textSize="16sp"
	            android:textColor="@color/typeface"
	            android:gravity="center"
	            />
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:src="@drawable/center_info_img"
	            android:layout_gravity="center_vertical"
	            />
	    </LinearLayout> 
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1.5dp"
	        android:background="#dfdfdf" 
	        />   

	    <LinearLayout 
	        android:id="@+id/center_info_weightLL"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:text="体        重"
	            android:textSize="18sp"
	            android:textColor="@color/black"
	            android:gravity="center"
	            />
	        <TextView 
	            android:id="@+id/center_info_weight"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="4"
	            android:hint="请选择体重"
	            android:background="@null"
	            android:textSize="16sp"
	            android:textColor="@color/typeface"
	            android:gravity="center"
	            />
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:src="@drawable/center_info_img"
	            android:layout_gravity="center_vertical"
	            />
	    </LinearLayout> 
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1.5dp"
	        android:background="#dfdfdf" 
	        />   
	        
