<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yikang.heartmark.view.TopBarView
        android:id="@+id/zixunDetailTopBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/zixunDetailB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/show_item_img"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/detail_yuyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuyin_selector" />
    </LinearLayout>

    <WebView
        android:id="@+id/zixun_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/zixunDetailB"
        android:layout_below="@id/zixunDetailTopBar" />

</RelativeLayout>