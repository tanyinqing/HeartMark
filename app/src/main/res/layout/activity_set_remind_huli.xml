<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.yikang.heartmark.view.TopBarView
        android:id="@+id/setRemindHuliTopBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/set_remind_huli_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/set_remind_huli_add"
            android:layout_marginBottom="20dp"
            android:listSelector="@android:color/transparent" 
            android:visibility="gone"
             />
           <ImageView
		        android:layout_above="@+id/set_remind_huli_add"
		        android:id="@+id/setRemindhuliimageview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="100dp"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:background="@drawable/setremindhuliimageview"
		        android:visibility="gone"
		         >
		    </ImageView>

        <Button
            android:id="@+id/set_remind_huli_add"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_img"
            android:text="添加提醒"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>
</LinearLayout>
