<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <com.yikang.heartmark.view.TopBarView
        android:id="@+id/mainServiceTopBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:id="@+id/main_service_shop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/main_service_bg"
            >
           <!--  这个是隐藏的 -->
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在健康商城可以看到相应产品"
                android:textSize="18sp"
                android:textColor="@color/typeface"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_service_shop_img"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="健康商城"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:textColor="@color/app_color"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/main_service_other"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_service_bg"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更多应用可以下载相关APP"
                android:textSize="18sp"
                android:textColor="@color/typeface"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_service_other_img"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="更多应用"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:textColor="@color/app_color"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>