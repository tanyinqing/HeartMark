<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/set_remind_huli_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="111"
            android:textColor="@color/typeface"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/set_remind_huli_item_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/set_remind_huli_item_delete"
            android:layout_toRightOf="@+id/set_remind_huli_item_time"
            android:layout_marginLeft="10dp"
            android:text="222"
            android:textColor="@color/typeface"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/set_remind_huli_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/delete_grey_img" />
    </RelativeLayout>

</LinearLayout>